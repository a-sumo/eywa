{
  "name": "remix-agents",
  "displayName": "Remix â€” Agent Memory",
  "description": "Monitor and steer AI agents sharing context through Remix",
  "version": "0.2.1",
  "publisher": "armandsumo",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "remix",
          "title": "Remix",
          "icon": "icon.svg"
        }
      ]
    },
    "views": {
      "remix": [
        {
          "id": "remixAgents",
          "name": "Agents"
        },
        {
          "id": "remixActivity",
          "name": "Activity"
        },
        {
          "id": "remixKnowledge",
          "name": "Knowledge"
        }
      ]
    },
    "commands": [
      {
        "command": "remix.connectAgent",
        "title": "Remix: Connect Agent"
      },
      {
        "command": "remix.openDashboard",
        "title": "Remix: Open Dashboard"
      },
      {
        "command": "remix.refreshAgents",
        "title": "Remix: Refresh Agents",
        "icon": "$(refresh)"
      },
      {
        "command": "remix.injectContext",
        "title": "Remix: Inject Context to Agent"
      },
      {
        "command": "remix.injectSelection",
        "title": "Remix: Inject Selection to Agent",
        "icon": "$(arrow-right)"
      },
      {
        "command": "remix.showStatus",
        "title": "Remix: Show Status"
      },
      {
        "command": "remix.injectToSession",
        "title": "Inject Context",
        "icon": "$(arrow-right)"
      },
      {
        "command": "remix.copySessionSummary",
        "title": "Copy Summary",
        "icon": "$(clippy)"
      },
      {
        "command": "remix.openSessionInDashboard",
        "title": "Open in Dashboard",
        "icon": "$(link-external)"
      },
      {
        "command": "remix.showKnowledgeForFile",
        "title": "Remix: Show Knowledge for File"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "remix.refreshAgents",
          "when": "view == remixAgents",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "remix.injectToSession",
          "when": "viewItem == remixSession",
          "group": "inline"
        },
        {
          "command": "remix.copySessionSummary",
          "when": "viewItem == remixSession",
          "group": "1_actions"
        },
        {
          "command": "remix.openSessionInDashboard",
          "when": "viewItem == remixSession",
          "group": "1_actions"
        },
        {
          "command": "remix.injectContext",
          "when": "viewItem == remixUser",
          "group": "1_actions"
        }
      ],
      "editor/context": [
        {
          "command": "remix.injectSelection",
          "when": "editorHasSelection",
          "group": "remix"
        }
      ]
    },
    "keybindings": [
      {
        "command": "remix.injectSelection",
        "key": "cmd+shift+i",
        "mac": "cmd+shift+i",
        "win": "ctrl+shift+i",
        "linux": "ctrl+shift+i",
        "when": "editorHasSelection"
      }
    ],
    "configuration": {
      "title": "Remix",
      "properties": {
        "remix.supabaseUrl": {
          "type": "string",
          "default": "",
          "description": "Supabase project URL"
        },
        "remix.supabaseKey": {
          "type": "string",
          "default": "",
          "description": "Supabase anon key"
        },
        "remix.room": {
          "type": "string",
          "default": "",
          "description": "Room slug to monitor"
        }
      }
    }
  },
  "scripts": {
    "compile": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "watch": "npm run compile -- --watch",
    "package": "npm run compile -- --minify && vsce package --allow-missing-repository"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.7.0"
  }
}
