{
  "name": "eywa-agents",
  "displayName": "Eywa - Agent Memory",
  "description": "See what your team's AI agents are building, right in VS Code",
  "version": "0.3.0",
  "publisher": "curvilinear",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/a-sumo/eywa"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "eywa",
          "title": "Eywa",
          "icon": "icon.svg"
        }
      ],
      "panel": [
        {
          "id": "eywaPanel",
          "title": "Agents",
          "icon": "$(pulse)"
        }
      ]
    },
    "views": {
      "eywa": [
        {
          "type": "webview",
          "id": "eywaLive",
          "name": "Eywa"
        }
      ],
      "eywaPanel": [
        {
          "type": "webview",
          "id": "eywaAgentPanel",
          "name": "Agents",
          "icon": "$(pulse)",
          "contextualTitle": "Agent Activity"
        }
      ]
    },
    "commands": [
      {
        "command": "eywa.login",
        "title": "Eywa: Login",
        "icon": "$(log-in)"
      },
      {
        "command": "eywa.connectAgent",
        "title": "Eywa: Connect Agent"
      },
      {
        "command": "eywa.openDashboard",
        "title": "Eywa: Open Dashboard"
      },
      {
        "command": "eywa.refreshAgents",
        "title": "Eywa: Refresh Agents",
        "icon": "$(refresh)"
      },
      {
        "command": "eywa.injectContext",
        "title": "Eywa: Inject Context to Agent"
      },
      {
        "command": "eywa.injectSelection",
        "title": "Eywa: Inject Selection to Agent",
        "icon": "$(arrow-right)"
      },
      {
        "command": "eywa.showStatus",
        "title": "Eywa: Show Status"
      },
      {
        "command": "eywa.showKnowledgeForFile",
        "title": "Eywa: Show Knowledge for File"
      },
      {
        "command": "eywa.toggleTabTitles",
        "title": "Eywa: Toggle Agent Tab Titles",
        "icon": "$(terminal)"
      },
      {
        "command": "eywa.setRoom",
        "title": "Eywa: Switch Room",
        "icon": "$(folder)"
      },
      {
        "command": "eywa.tagTerminal",
        "title": "Eywa: Tag Terminal with Agent",
        "icon": "$(terminal)"
      }
    ],
    "walkthroughs": [
      {
        "id": "eywa.welcome",
        "title": "Get Started with Eywa",
        "description": "See what your team's AI agents are building, right in VS Code.",
        "steps": [
          {
            "id": "eywa.welcome.setRoom",
            "title": "Join a Room",
            "description": "Eywa rooms are shared workspaces where all agent activity is visible. Set a room slug to start monitoring.\n\n[Set Room](command:eywa.setRoom)",
            "media": { "altText": "Set a room", "image": "icon.svg" },
            "completionEvents": ["onSettingChanged:eywa.room"]
          },
          {
            "id": "eywa.welcome.connectAgent",
            "title": "Connect an Agent",
            "description": "Give your AI agent (Claude Code, Cursor, etc.) an MCP URL so it reports to Eywa.\n\n[Connect Agent](command:eywa.connectAgent)",
            "media": { "altText": "Connect agent", "image": "icon.svg" },
            "completionEvents": ["onCommand:eywa.connectAgent"]
          },
          {
            "id": "eywa.welcome.sidebar",
            "title": "Open the Sidebar",
            "description": "The Eywa sidebar shows live agent activity, avatars, and status. Click the Eywa icon in the activity bar.\n\n[Open Sidebar](command:eywaLive.focus)",
            "media": { "altText": "Sidebar", "image": "icon.svg" },
            "completionEvents": ["onView:eywaLive"]
          },
          {
            "id": "eywa.welcome.inject",
            "title": "Inject Context",
            "description": "Select code in the editor and press Cmd+Shift+I to send it to an agent. You can also use the command palette.\n\n[Try Inject](command:eywa.injectContext)",
            "media": { "altText": "Inject", "image": "icon.svg" },
            "completionEvents": ["onCommand:eywa.injectContext"]
          }
        ]
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "eywa.injectSelection",
          "when": "editorHasSelection",
          "group": "eywa"
        }
      ]
    },
    "keybindings": [
      {
        "command": "eywa.injectSelection",
        "key": "cmd+shift+i",
        "mac": "cmd+shift+i",
        "win": "ctrl+shift+i",
        "linux": "ctrl+shift+i",
        "when": "editorHasSelection"
      }
    ],
    "configuration": {
      "title": "Eywa",
      "properties": {
        "eywa.supabaseUrl": {
          "type": "string",
          "default": "https://beknjtxysmznenkotjvv.snapcloud.dev",
          "description": "Supabase project URL (default: Eywa hosted instance)"
        },
        "eywa.supabaseKey": {
          "type": "string",
          "default": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImJla25qdHh5c216bmVua290anZ2Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjYxMzYzNTYsImV4cCI6MjA4MTcxMjM1Nn0.5ecajJdpaK4FN-CuQI2ExfZWhCZl0rUrbFT6MGV-egs",
          "description": "Supabase anon key (get from Supabase dashboard > Settings > API)"
        },
        "eywa.room": {
          "type": "string",
          "default": "",
          "description": "Room slug to monitor"
        },
        "eywa.logLevel": {
          "type": "string",
          "default": "all",
          "enum": ["all", "important", "sessions"],
          "enumDescriptions": [
            "Show all agent activity",
            "Show sessions, knowledge, injections, and errors only",
            "Show session start/stop only"
          ],
          "description": "What to show in the activity feed"
        },
        "eywa.historyHours": {
          "type": "number",
          "default": 24,
          "enum": [1, 6, 24, 72],
          "description": "How many hours of history to load"
        }
      }
    }
  },
  "scripts": {
    "compile": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "watch": "npm run compile -- --watch",
    "package": "npm run compile -- --minify && vsce package --allow-missing-repository"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.7.0"
  }
}
